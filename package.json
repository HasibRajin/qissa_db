{
  "name": "qissa_backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "node ace build --prod",
    "start": "node ace serve --watch",
    "start:prod": "node ./build/server.js"
  },
  "engines": {
    "node": "16.15.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.6.2",
    "@japa/preset-adonis": "^1.0.15",
    "@japa/runner": "^2.0.7",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "typescript": "~4.6",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.3"
  },
  "dependencies": {
    "@adonisjs/ally": "^4.1.4",
    "@adonisjs/auth": "^8.1.0",
    "@adonisjs/bouncer": "^2.3.0",
    "@adonisjs/core": "^5.7.6",
    "@adonisjs/lucid": "^17.2.0",
    "@adonisjs/mail": "^8.1.2",
    "@adonisjs/repl": "^3.1.10",
    "@adonisjs/view": "^6.1.5",
    "luxon": "^2.4.0",
    "nodemailer": "^6.7.5",
    "nodemailer-postmark-transport": "^5.2.1",
    "pg": "^8.7.3",
    "phc-argon2": "^1.1.3",
    "proxy-addr": "^2.0.7",
    "pusher": "^5.1.0-beta",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "url-parse": "^1.5.10"
  }
}
